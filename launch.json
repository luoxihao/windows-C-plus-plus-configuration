{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python:调试器",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "万恶的c++调试器",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.exe", 
            "args": [], 
            "stopAtEntry": false, 
            "cwd": "${workspaceRoot}", 
            "environment": [],
            "externalConsole": true, 
            "MIMode": "gdb",
            "miDebuggerPath": "G:\\MinGW64\\bin\\gdb.exe",//这里路径对应到gdb.exe 
            "internalConsoleOptions": "neverOpen",
            "preLaunchTask": "g++", 
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}